        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-webmvc</artifactId>
                </exclusion>
                <!-- Excluding to address CVE-2025-48989 tomcat-embed-core10.1.43 and tomcat-embed-websocket-10.1.43 are pulled transitively-->
